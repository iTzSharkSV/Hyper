{
	"name": "@sharksv/hyper",
	"description": "A CLI to bootstrap new projects!",
	"version": "2.0.0",
	"keywords": [
		"Cli",
		"Hyper",
		"Project-Generator",
		"Template-Generator"
	],
	"bin": {
		"hyper": "Bin/Hyper"
	},
	"main": "Build/Cli.js",
	"files": [
		"Bin",
		"Build",
		"Templates",
		"LICENSE",
		"README.md"
	],
	"publishConfig": {
		"access": "public"
	},
	"author": {
		"name": "SharkSV",
		"email": "SharkSV@outlook.com",
		"url": "https://github.com/iTzSharkSV"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/iTzSharkSV/Hyper.git"
	},
	"license": "MIT",
	"scripts": {
		"build": "tsc",
		"build:dev": "tsc --watch",
		"lint": "eslint --ignore-path .gitignore --ext .js,.ts .",
		"format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
		"prepublish": "yarn lint && yarn format && yarn build"
	},
	"dependencies": {
		"chalk": "4.1.2",
		"execa": "5.1.1",
		"inquirer": "^8.2.0",
		"listr": "^0.14.3",
		"meow": "9.0.0",
		"ncp": "^2.0.0"
	},
	"devDependencies": {
		"@types/inquirer": "^8.1.3",
		"@types/listr": "^0.14.4",
		"@types/meow": "^6.0.0",
		"@types/ncp": "^2.0.5",
		"@types/node": "^17.0.2",
		"@typescript-eslint/eslint-plugin": "^5.8.0",
		"@typescript-eslint/parser": "^5.8.0",
		"eslint": "^8.5.0",
		"eslint-config-prettier": "^8.3.0",
		"prettier": "^2.5.1",
		"typescript": "^4.5.4"
	}
}
